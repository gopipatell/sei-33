<!DOCTYPE html>
<html>
  <head>
    <title>IHateTurbolinks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
      <%= link_to 'Groucho', groucho_path %>
      <%= link_to 'Harpo', harpo_path %>
      <%= link_to 'Chico', chico_path %>
    </nav>
    <%= yield %>
  </body>
</html>
